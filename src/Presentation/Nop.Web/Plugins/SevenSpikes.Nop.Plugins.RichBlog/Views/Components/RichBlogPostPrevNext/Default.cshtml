@using Nop.Web.Framework.Extensions
@model RichBlogPrevNextModel

@if (!string.IsNullOrEmpty(Model.PreviousBlogPostTitle) || !string.IsNullOrEmpty(Model.NextBlogPostTitle))
{
    <div class='post-navigation'>
        @if (!string.IsNullOrEmpty(Model.PreviousBlogPostTitle))
        {
            <a href='@Url.RouteUrl("BlogPostWithPath", new {Path = Model.PreviousBlogPostSeName.GetPathFromSeName(), SeName = Model.PreviousBlogPostSeName.GetSeNameWithoutPath() })' title='@Model.PreviousBlogPostTitle' class='prev'>@Model.PreviousBlogPostTitle</a>
        }


        @if (!string.IsNullOrEmpty(Model.NextBlogPostTitle))
        {
            <a href='@Url.RouteUrl("BlogPostWithPath", new {Path = Model.NextBlogPostSeName.GetPathFromSeName(), SeName = Model.NextBlogPostSeName.GetSeNameWithoutPath() })' title='@Model.NextBlogPostTitle' class='next'>@Model.NextBlogPostTitle</a>
        }
    </div>
}